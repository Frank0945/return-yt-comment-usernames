{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "1.0.5",
  "icons": {
    "128": "128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/injected.js"
      ],
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ]
    }
  ]
}